{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    "schedule:daily"
  ],
  "automerge": true,
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "addLabels": [
        "minor"
      ]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}